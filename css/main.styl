// Variables
main-color = #252529
secondary-color = #8b8b9f
highlight-color =	#73e298

// Mixins
vertical-align()
  position absolute
  top 50%
  -webkit-transform translateY(-50%)
  transform translateY(-50%)

// General Styles
*
  box-sizing border-box

html, body 
  font-family 'Open Sans', sans-serif

.clearfix:before, .clearfix:after
  content ""
  display table

.clearfix:after
  clear both

h1, h2, h3, h4, h5, h6
  font-weight 300;

ul
  list-style none
  padding-left 0

a
  text-decoration none
  color secondary-color
  
  &:hover
    color highlight-color

img
  max-width 100%

.wrapper
  width 95%
  max-width 1440px
  margin 0 auto
  
// Header Styles
.main-header
  display flex
  flex-wrap wrap
  justify-content space-around
  align-items center
  width 100%
    
  .menu
    display none
    width 100%
    z-index 2
    
    ul
      margin-top 0
    
    background white
    
    .menu__item
      margin 5px
  
  .dropdown
    font-size 2.5em